<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

     >
    
    <TextView
        android:id="@+id/weight_txt"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:textSize="20sp"
        android:gravity="center_vertical"
        />
    

  	<ImageButton
  	    android:id="@+id/dbutton"
    	android:layout_width="wrap_content"
  	    android:layout_height="fill_parent"
  	    android:src="@drawable/navigation_expand"
  	    android:contentDescription="Down Button"
  	    />
  	  <!-- android:onClick="dbuttonClicked"-->
  	<ImageButton
  	    android:id="@+id/ubutton"
  	    android:layout_width="wrap_content"
  	    android:layout_height="fill_parent"
  	    android:src="@drawable/navigation_collapse"
  	    android:contentDescription="Up Button"
  	    />
  	
  
  	
  	

</LinearLayout>
